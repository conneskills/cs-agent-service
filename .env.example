# ── LiteLLM as provider gateway ──
# Claude Agent SDK calls go through LiteLLM, which manages provider keys
ANTHROPIC_BASE_URL=https://litellm.conneskills.com
ANTHROPIC_API_KEY=sk-...  # LiteLLM virtual key (not Anthropic key directly)

# ── LiteLLM Prompt Management ──
LITELLM_URL=https://litellm.conneskills.com
LITELLM_API_KEY=sk-...  # Same key, used for prompt fetch

# ── Dynamic mode (reads config from Registry API) ──
# AGENT_ID=<uuid from registry>
# REGISTRY_URL=http://registry-api:9500

# ── Agent service ──
AGENT_PORT=9100
PERMISSION_MODE=bypassPermissions

# ── Legacy mode (no registry, single agent from env vars) ──
# AGENT_ROLE=researcher
# SYSTEM_PROMPT=You are a research agent.
# ALLOWED_TOOLS=Bash,Read,Grep,Glob
