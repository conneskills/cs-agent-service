FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir \
    a2a-sdk \
    claude-agent-sdk \
    aiohttp \
    httpx

COPY src/ /app/src/

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

EXPOSE 9100

CMD ["python", "-m", "src.discovery_main"]
